{% extends 'base.html.twig' %}

{% block title %}Application{% endblock %}

{% block body %}
    <h1>Application</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ application.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ application.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ application.description }}</td>
            </tr>
            <tr>
                <th>Locked</th>
                <td>{{ application.locked }}</td>
            </tr>
            <tr>
                <th>Deploy source</th>
                <td>{{ application.deploySource }}</td>
            </tr>
            <tr>
                <th>Directory</th>
                <td>{{ application.dir }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ application.createdAt ? application.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ application.updatedAt ? application.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('manage_apps_index') }}">back to list</a>

    <a href="{{ path('manage_apps_edit', {'id': application.id}) }}">edit</a>

    {{ include('manage_apps/_delete_form.html.twig') }}
{% endblock %}
